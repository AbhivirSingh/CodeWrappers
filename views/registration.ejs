    <script>
        const newAccount = document.querySelector('.newAccount p');
        const accountExisting = document.querySelector('.accountExisting p');
        const loginForm = document.querySelector('#login-form');
        const signupForm = document.querySelector('#signup-form');
        const authContainer = document.querySelector('.auth-container');

        newAccount.addEventListener('click', () => {
            loginForm.classList.add('inactive');
            signupForm.classList.remove('inactive');
            authContainer.querySelector('h2').innerText = 'Signup';
        });
        accountExisting.addEventListener('click', () => {
            loginForm.classList.remove('inactive');
            signupForm.classList.add('inactive');
            authContainer.querySelector('h2').innerText = 'Login';
        });
    </script>
